{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "curly": false,
    "eofline": false,
    "whitespace": false,
    "no-console": false,
    "ordered-imports": false,
    "object-shorthand": false,
    "no-shadowed-variable": false,
    "indent": [
      true,
      "spaces",
      2
    ],
    "quotemark": [
      true,
      "double"
    ],
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "semicolon": [
      true,
      "always",
      "ignore-interfaces"
    ],
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "trailing-comma": false
  }
}